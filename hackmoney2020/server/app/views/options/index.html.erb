<p id="notice"><%= notice %></p>

<h1>Options</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Expires on</th>
      <th>Strike price</th>
      <th>Opt type</th>
      <th>Magic number</th>
      <th>Contract address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @options.each do |option| %>
      <tr>
        <td><%= option.user_id %></td>
        <td><%= option.expires_on %></td>
        <td><%= option.strike_price %></td>
        <td><%= option.opt_type %></td>
        <td><%= option.magic_number %></td>
        <td><%= option.contract_address %></td>
        <td><%= link_to 'Show', option %></td>
        <td><%= link_to 'Edit', edit_option_path(option) %></td>
        <td><%= link_to 'Destroy', option, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

